


<%= form_tag new_refund_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "Enter Provider TIN" %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% for provider in @providers %>
  <%= provider.name %>
<% end %>


<%= form_for @refund do |f| %>
  <div class="col-md-5">
    <div class="form-group">
      <%= f.label :amount_requested %>
      <%= f.number_field :amount_requested, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :reason %>
      <%= f.text_area :reason, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>